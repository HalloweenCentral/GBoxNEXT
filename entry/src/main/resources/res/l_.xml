<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"/>
            <size android:height="8dp"/>
            <stroke android:width="1dp" android:color="#80ffffff"/>
            <solid android:color="@color/colorBlackTranslucent80"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="8dp"/>
                <size android:height="8dp"/>
                <stroke android:width="1dp" android:color="@android:color/transparent"/>
                <solid android:color="@color/update_button_color"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="8dp"/>
                <size android:height="8dp"/>
                <stroke android:width="1dp" android:color="@android:color/transparent"/>
                <solid android:color="@color/update_button_color"/>
            </shape>
        </clip>
    </item>
</layer-list>
