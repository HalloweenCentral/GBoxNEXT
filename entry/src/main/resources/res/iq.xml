<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.gbox.android.view.ToolbarKit android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="@dimen/toolbar_height" app:layout_constraintTop_toTopOf="0" app:title="@string/fast_feedback"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="24dp">
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/colorToolbarTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/report_email"/>
            <TextView android:textSize="10sp" android:textColor="@color/colorToolbarTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/email_notify_tips"/>
            <EditText android:textSize="12sp" android:textColor="@color/colorToolbarTitle" android:textColorHint="#b1b2b2" android:id="@+id/et_tel" android:background="@drawable/selector_edittext" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="16dp" android:hint="@string/place_enter_your_email" android:maxLines="1" android:inputType="textEmailAddress" android:paddingHorizontal="16dp"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/colorToolbarTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:text="@string/questions_and_suggestions"/>
            <EditText android:textSize="12sp" android:textColor="@color/colorToolbarTitle" android:textColorHint="#b1b2b2" android:gravity="top" android:id="@+id/et_detail" android:background="@drawable/rectangle_grey_radius8" android:padding="16dp" android:layout_width="match_parent" android:layout_height="132dp" android:layout_marginTop="16dp" android:hint="@string/report_content"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/colorToolbarTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:text="@string/report_screenshot_or_video"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:overScrollMode="never"/>
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_submit" android:background="@drawable/bg_button_kit_primary" android:focusable="true" android:focusableInTouchMode="false" android:clickable="true" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="32dp" android:layout_marginBottom="16dp" android:text="@string/submit"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
